{% extends 'layout.twig' %}

{% block title %}Admin{% endblock %}

{% block content %}
        {% for order in orders %}
            <details>
                <summary>Order â„– {{ order.id }}</summary>
                    <table border="1" cellspacing="0">
                        <tr>                           
                            <td>{{ order.date }}</td>
                            <td>{{ order.login }}</td>
                            <td>{{ order.sum }}$</td>
                
                            <td>
                                <select {% if false == allowEdit %}disabled{% endif %} data-id="{{ order.id }}" class="js-status">
                                    {% for sId,sTitle in statuses %}
                                        <option 
                                            {% if sId == order.status %}
                                                selected
                                            {% endif %} 
                                            value="{{ sId }}">{{ sTitle }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                                {% for good in order.goods %}
                                    <li>
                                        <a href="/catalog/{{ good.categoryId }}/{{ good.id }}">
                                            {{ good.name }}
                                        </a> 
                                        ${{ good.price }} x {{ good.count }} = ${{ good.sum }}
                                    </li>
                                {% endfor %}
                            </td>
                        <tr>
                    </table>
            </details>
        {% endfor %}

        <script>
            $('.js-status').change(function () {
                var id = $(this).data('id');
                var status = $(this).val();
                $.ajax({
                    url: '?status=' + status + '&id=' + id,
                })
            });
        </script>
{% endblock %}
