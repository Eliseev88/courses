{% extends 'layout.twig' %}

{% block title %}Signup{% endblock %}

{% block content %}
    <form method="POST">
        <label>Name</label>
        <input type="text" name="user_name" placeholder="Type your name" value="{{ temp.name }}" required>
        <br><br>
        <label>Login</label>
        <input type="text" name="user_login" placeholder="Type your login" value="{{ temp.login }}" required>
        <br><br>
        <label>E-mail</label>
        <input type="email" name="user_email" placeholder="Type your email" value="{{ temp.email }}" required>
        <br><br>
        <label>Password</label>
        <input type="password" name="user_pass" placeholder="Type your password" required>
        <br><br>
        <label>Password confirming</label>
        <input type="password" name="user_confirm_pass" placeholder="Confirm password" required>
        <br><br>
        <button type="submit">Register me</button>
        <input type="reset" value="Clear">
        <p>Already have an account? - <a href="signin">Login!</a></p>
        <p>{{ msg }}</p>
    </form>
{% endblock %}
