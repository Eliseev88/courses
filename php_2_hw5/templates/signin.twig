{% extends 'layout.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
    <form method="POST">
        <label>Login</label>
        <input type="text" name="user_login" placeholder="Enter your login">
        <label>Password</label>
        <input type="password" name="user_pass" placeholder="Enter your password">
        <br><br>
        <label for="remember">Remember me</label>
        <input type="checkbox" id="remember" name="remember_me" checked>
        <br><br>
        <button type="submit">Signin</button>
        <p>Do not have account? - <a href="signup">Register!</a></p>
    </form>
    <p>{{ msg }}</p>
{% endblock %}
